@model Category


<div class="card shadow border-0 mt-4">
    <div class="card-hearder bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">ADD A CATEGORY</h2>
            </div>
           
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="name">Name:</label>
                <input asp-for="name" type="text" class="form-control" placeholder="Enter name">
                <span asp-validation-for="name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder">DisplayOrder:</label>
                <input asp-for="DisplayOrder" class="form-control" placeholder="Enter description" rows="4">
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary form control">Submit</button>
            <a class="btn btn-secondary" asp-controller="Category" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>



@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}
